<%-include('component/header')%>
<%-include('component/sidebar')%>

            <!-- Main Content -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 py-4">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2">Groups</h1>
                    <div class="btn-toolbar mb-2 mb-md-0">
                        <!-- <div class="btn-group me-2">
                            <button type="button" class="btn btn-sm btn-outline-secondary">
                                <i class="fas fa-download"></i> Export
                            </button>
                            <button type="button" class="btn btn-sm btn-outline-secondary">
                                <i class="fas fa-filter"></i> Filter
                            </button>
                        </div> -->
                        <a href="/create-group" class="btn btn-sm btn-primary">
                            <i class="fas fa-plus"></i> New Group
                        </a>
                    </div>
                </div>

                <!-- Search and View Options -->
                <div class="row mb-4">
                    <div class="col-md-6">
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Search groups...">
                            <button class="btn btn-outline-secondary" type="button">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </div>
                    <div class="col-md-6 text-md-end">
                        <div class="btn-group" role="group">
                            <button type="button" class="btn btn-sm btn-outline-secondary active">
                                <i class="fas fa-th-large"></i> Grid
                            </button>
                            <button type="button" class="btn btn-sm btn-outline-secondary">
                                <i class="fas fa-list"></i> List
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Groups Grid View -->
                <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 row-cols-xl-4 g-4">
                    <!-- Team Members Group -->
                     <%g.forEach((i)=>{%>
                    <div class="col">
                        <div class="card group-card h-100">
                            <div class="card-body text-center">
                                <img src="<%=i.groupUpload%>" alt="img" class="group-avatar mb-3">
                                <h5 class="card-title"><%=i.groupName%></h5>
                                <p class="card-text text-muted"><%=i.groupDescription%></p>
                                <div class="d-flex justify-content-center mb-3">
                                    <span class="badge bg-light text-dark me-2">
                                        <i class="fas fa-users text-primary"></i> <%=i.member.split(",").length%> members
                                    </span>
                                    <span class="badge bg-light text-dark">
                                        <i class="fas fa-calendar text-secondary"></i> Jan 2023
                                    </span>
                                </div>
                                <!-- <div class="avatar-stack mb-3">
                                    <img src="https://randomuser.me/api/portraits/men/32.jpg" width="30" height="30" class="rounded-circle border border-white" style="margin-right: -10px;">
                                    <img src="https://randomuser.me/api/portraits/women/44.jpg" width="30" height="30" class="rounded-circle border border-white" style="margin-right: -10px;">
                                    <img src="https://randomuser.me/api/portraits/men/67.jpg" width="30" height="30" class="rounded-circle border border-white" style="margin-right: -10px;">
                                    <span class="rounded-circle border border-white d-inline-flex align-items-center justify-content-center bg-light text-dark" style="width: 30px; height: 30px;">+5</span>
                                </div> -->
                            </div>
                            <div class="card-footer bg-transparent border-top-0">
                                <div class="d-flex justify-content-between">
                                    <a href="/group-view?id=<%=i.id%>" class="btn btn-sm btn-outline-primary">
                                        <i class="fas fa-eye"></i> View
                                    </a>
                                    <div class="dropdown">
                                        <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown">
                                            <i class="fas fa-ellipsis-h"></i>
                                        </button>
                                        <ul class="dropdown-menu dropdown-menu-end">
                                            <li><a class="dropdown-item" href="group-edit"><i class="fas fa-edit me-2"></i>Edit</a></li>
                                            <li><a class="dropdown-item" href="#"><i class="fas fa-envelope me-2"></i>Email Group</a></li>
                                            <li><hr class="dropdown-divider"></li>
                                            <li><a class="dropdown-item text-danger" href="/group-delete?id=<%=i.id%>"><i class="fas fa-trash me-2"></i>Delete</a></li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <%})%>

                   
                </div>

                <!-- Pagination -->
                <nav aria-label="Page navigation" class="mt-4">
                    <ul class="pagination justify-content-center">
                        <li class="page-item disabled">
                            <a class="page-link" href="#" tabindex="-1">Previous</a>
                        </li>
                        <li class="page-item active"><a class="page-link" href="#">1</a></li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                        <li class="page-item">
                            <a class="page-link" href="#">Next</a>
                        </li>
                    </ul>
                </nav>
            </main>
        </div>
    </div>

<%-include('component/footer')%>
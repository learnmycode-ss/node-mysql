<%-include('component/header')%>
<%-include('component/sidebar')%>
            <!-- Main Content -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 py-4">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2">Team Members</h1>
                    <div class="btn-toolbar mb-2 mb-md-0">
                        <div class="btn-group me-2">
                            <a href="/groups" class="btn btn-sm btn-outline-secondary">
                                <i class="fas fa-arrow-left"></i> Back to Groups
                            </a>
                            <a href="group-create.html" class="btn btn-sm btn-outline-primary">
                                <i class="fas fa-plus"></i> Add Member
                            </a>
                        </div>
                        <div class="btn-group">
                            <button type="button" class="btn btn-sm btn-outline-secondary">
                                <i class="fas fa-envelope"></i> Email Group
                            </button>
                            <div class="btn-group">
                                <button type="button" class="btn btn-sm btn-outline-secondary dropdown-toggle" data-bs-toggle="dropdown">
                                    <i class="fas fa-ellipsis-h"></i>
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li><a class="dropdown-item" href="group-edit.html"><i class="fas fa-edit me-2"></i>Edit Group</a></li>
                                    <li><a class="dropdown-item" href="#"><i class="fas fa-clone me-2"></i>Duplicate Group</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item text-danger" href="#"><i class="fas fa-trash me-2"></i>Delete Group</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Group Profile -->
                <div class="row mb-4">
                    <div class="col-md-3 text-center">
                        <img src="https://via.placeholder.com/300x300?text=Team" alt="Group" class="group-avatar mb-3">
                    </div>
                    <div class="col-md-9">
                        <h2><%=g.groupName%></h2>
                        <p class="lead">Our core team working on the new product launch</p>
                        <div class="d-flex flex-wrap gap-2 mb-3">
                            <span class="badge bg-primary">
                                <i class="fas fa-users me-1"></i> <%=g.member.length%> members
                            </span>
                            <span class="badge bg-secondary"><%const months = ["January", "February", "March", "April", "May", "June", "July", "August", "September", "October", "November", "December"];let d1 = new Date(g.create_at);%>
                                <i class="fas fa-calendar me-1"></i> Created: <%=d1.getDate()%>-<%=months[d1.getMonth()] %>-<%=d1.getFullYear()%>
                            </span>
                            <%if(g.update_at !=null){%>
                            <span class="badge bg-success">
                                <i class="fas fa-sync-alt me-1"></i> Updated: 2 days ago
                            </span>
                            <%}%>
                        </div>
                        <p><%=g.groupDescription%></p>
                    </div>
                </div>

                <!-- Group Members -->
                <div class="card mb-4">
                    <div class="card-header">
                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">Members</h5>
                            <div class="input-group" style="width: 300px;">
                                <input type="text" class="form-control" placeholder="Search members...">
                                <button class="btn btn-outline-secondary" type="button">
                                    <i class="fas fa-search"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover align-middle">
                                <thead>
                                    <tr>
                                        <th>Photo</th>
                                        <th>Name</th>
                                        <th>Email</th>
                                        <th>Phone</th>
                                        <th>Role</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <%c.map((i)=>{%>
                                    <tr>
                                        <td><img src="<%=i.profileUpload%>" alt="Profile" class="member-avatar"></td>
                                        <td><%=i.firstName%> <%=i.lastName%></td>
                                        <td><%=i.email%></td>
                                        <td><%=i.mobile%></td>
                                        <td><span class="badge bg-primary"><%=i.jobTitle%></span></td>
                                        <td>
                                            <div class="d-flex gap-2">
                                                <a href="/show-contact?id=<%=i.id%>" class="btn btn-sm btn-outline-primary action-btn" title="View">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <button class="btn btn-sm btn-outline-danger action-btn" title="Remove">
                                                    <i class="fas fa-user-minus"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                    <%})%>
                                    
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

